<!----------------------CORPO DO FORMS--------------------->
<br>
<h4 class="d-flex p-2">Consultar - tela para ver clientes</h4>

<p class="d-flex p-2">Sistema utilizado para agendamento de serviços</p>

<div class="container-lg">
  <div class="container text-center">
    <div class="row">
      <div class="col bg-primary text-light">
        ID
      </div>
      <div class="col bg-primary text-light">
        Nome
      </div>
      <div class="col bg-primary text-light">
        Telefone
      </div>
      <div class="col bg-primary text-light">
        Origem
      </div>
      <div class="col bg-primary text-light">
        Data de Nascimento
      </div>
      <div class="col bg-primary text-light">
        Observação
      </div>
      <div class="col bg-primary text-light">
        Ações
      </div>
    </div>

    {{#each documents}}
    <div class="row">
      <div class="col">
        {{this.id}}
      </div>
      <div class="col">
        {{this.nome}}
      </div>
      <div class="col">
        {{this.telefone}}
      </div>
      <div class="col">
        {{this.origem}}
      </div>
      <div class="col">
        {{this.data}}
      </div>
      <div class="col">
        {{this.observacao}}
      </div>
      <div class="col">
        <a href="/editar/{{this.id}}" class="btn btn-secondary">Editar</a>
        <a href="/deletar/{{this.id}}" class="btn btn-danger">Excluir</a>
      </div>
      <br>
    </div>
    {{/each}}
  </div>
</div>
